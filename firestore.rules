rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Medications subcollection
      match /medications/{medId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Medication logs subcollection
      match /medLogs/{logId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Tips progress subcollection
      match /tipsProgress/{tipId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Health tips are readable by all authenticated users
    match /healthTips/{tipId} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins can write (configure via Firebase Console)
    }
  }
}

